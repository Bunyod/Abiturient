# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index

POST	/login						@controllers.Application.login
GET		/logout						@controllers.Application.logout
GET		/pageB						@controllers.Application.pageB
POST	/ajaxText					@controllers.Application.ajaxText


#GET     /lesson/dashboard/            controllers.LessonController.index
#POST    /lesson/dashboard/login       controllers.LessonController.loginPost
#GET     /lesson/dashboard/logout      controllers.LessonController.logout
#POST    /lesson/dashboard/report      controllers.LessonController.report

POST     /user/registration            @controllers.UsersController.registration
GET      /user/register                @controllers.UsersController.showRegisterForm


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
    