# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index

POST	/login						@controllers.Application.loginPost
GET		/logout						@controllers.Application.logout
GET		/pageB						@controllers.Application.pageB
GET		/pageC						@controllers.Application.pageC
GET		/pageD						@controllers.Application.pageD
GET		/pageD						@controllers.Application.about
GET		/pageD						@controllers.Application.services
GET		/pageD						@controllers.Application.portfolio



#GET     /lesson/dashboard/            controllers.LessonController.index
#POST    /lesson/dashboard/login       controllers.LessonController.loginPost
#GET     /lesson/dashboard/logout      controllers.LessonController.logout
#POST    /lesson/dashboard/report      controllers.LessonController.report

POST     /user/registration            @controllers.UsersController.registration
GET      /user/register                @controllers.UsersController.showRegisterForm
GET      /test/                        @controllers.FileReader.ind


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
    